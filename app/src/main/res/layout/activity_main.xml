<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:background="#32E91E63"
    android:scrollbars="horizontal|vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="398dp"
        android:layout_height="684dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="232dp"
            android:layout_height="126dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btxt"
            app:srcCompat="@drawable/img2" />

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/btxt1"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:fontFamily="@font/chelsea_market"
                android:freezesText="false"
                android:gravity="center"

                android:padding="2dp"
                android:text="class?"
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="137dp"
                android:layout_height="38dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/chelsea_market"
                android:gravity="center"
                android:padding="2dp"
                android:text="Material?"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btxt"
            android:orientation="horizontal"
            android:padding="10dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="146dp"
                android:layout_height="39dp"
                android:layout_marginRight="10dp"

                android:background="@color/design_default_color_surface"></Spinner>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="146dp"
                android:layout_height="39dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"></Spinner>


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btxt"
            android:fontFamily="@font/chelsea_market"
            android:gravity="center"
            android:text="Serch"
            app:icon="@android:drawable/ic_menu_search"></Button>

        <TextView
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btxt"
            android:fontFamily="@font/chelsea_market"
            android:gravity="center"
            android:text="Result"
            android:textColor="@color/black"
            android:textColorHint="#2D2F31"
            android:textSize="18dp"></TextView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="345dp"
            android:layout_height="232dp"
            android:background="@drawable/btxt"
            android:padding="10dp"
            android:scrollbars="horizontal|vertical"
            android:visibility="visible"
            app:srcCompat="@drawable/img1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
